<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h2>Edit post</h2>
				<% if @post.user.id == current_user.id %>
					<%= form_for(@post) do |f| %>
						<h4> title </h4>
							<%= f.text_field :title %>
						<h4> impression </h4>
							<%= f.text_area :impression %><br/>
						<%= f.submit '編集完了' ,data: {confirm: 'この内容で更新してよろしいですか?'}, class: 'btn btn-primary' %>
					<% end %>
				<% else %>
					<p> 編集権限がありません </p>
				<% end %>
		</div>
	</div>
</div>