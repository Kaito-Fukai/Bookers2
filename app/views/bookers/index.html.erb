<!doctype html>
<html>
  <head>
	<meta charset="UTF-8">
  </head>
<!-- body -->
  <body>
	<div class="container">
		<div class="row">
				<div class="col-xs-4">
  	<!-- 投稿フォーム -->
  	<section class="new-book">
  		<h3> create new post </h3>
		<%= form_for(@newpost) do |f| %>
		<h4> title </h4>
		<%= f.text_field :title %>

		<h4> impression </h4>
		<%= f.text_area :impression %> <br />

		<%= f.submit '投稿する' %>

		<% end %>
  	</section>
  </div>
	<!-- 投稿内容一覧 -->
	<div class="col-xs-8">
  	<section class="contents">
  		<h3>all posts</h3>
		<table class="table table-stripped">
			<tr align="left">
				<th> title </th>
				<th> impression </th>
				<th> user </th>
			</tr>
	  		<% @post.each do |post| %>
			<tr align="left">
				<td> <%= link_to post.title, booker_path(post) %> </td>
				<td> <%= link_to post.impression, booker_path(post) %> </td>
				<td> <%= link_to post.user.name, booker_path(post) %> </td>
				<td class="button"> <%= link_to "詳しく見る", booker_path(post) %>
			</tr>
	  		<% end %>
		</table>
	  <%= paginate @post, class: "pagenate" %>
  	</section>
  </div>
</div>
</div>
  </body>
</html>
