<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div id="slidemenu">
  <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
    <% if user_signed_in? %>
      <li class="">
        <%= link_to "Log out", destroy_user_session_path, method: :delete %>
      </li>
      <li class="">
        <%= link_to 'Books', bookers_path %>
      </li>
      <li class="">
        <%= link_to 'Users', users_path %>
      </li>
      <li class="">
        <%= link_to 'Home', user_path(current_user.id) %>
      </li>
    <% else %>
      <li class="">
        <%= link_to "Top", bookers_top_path %>
      </li>
      <li class="">
        <%= link_to "Sign up", new_user_registration_path %>
      </li>
      <li class="">
        <%= link_to "About", bookers_top_path %>
      </li>
      <li class="">
        <%= link_to "Log in", new_user_session_path %>
      </li>
    <% end %>
  </ul>
</div>
    <%= yield %>
  </body>
</html>
