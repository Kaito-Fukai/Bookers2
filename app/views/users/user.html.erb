<!doctype html>
<html>
  <head>
	<meta charset="UTF-8">
  </head>
<!-- body -->
  <body>
  	<h1>Bookers </h1>
	<!-- 投稿内容一覧・操作メニュー -->
<div class="container">
<div class="row">
	<div class="col-lg-4">
	<!-- ユーザー情報 -->
	<!-- 投稿フォーム -->
  	<section class="new-book">
  		<h2> 新規投稿はこちら </h2>
		<%= form_for(@newpost) do |f| %>
		<h4> 書籍名 </h4>
		<%= f.text_field :title %>

		<h4> 感想 </h4>
		<%= f.text_area :impression %>

		<%= f.submit '投稿する' %>

		<% end %>
  	</section>
  </div>
	<!-- 投稿内容一覧 -->
	<div class="col-lg-8">
  	<section class="contents">
  		<h2>一覧</h2>
		<table class="table table-stripped">
			<tr align="left">
				<th> profile image </th>
				<th> name </th>
				<th> <th>
			</tr>
	  		<% @user.each do |user| %>
			<tr align="left">
				<td> <%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb"%> </td>
				<td> <%= link_to user.name, booker_path(user) %> </td>
				<td class="button"> <%= link_to "この人の投稿を見る", booker_path(user) %>
					</td>
			</tr>
	  		<% end %>
		</table>
  	</section>
  </div>
</div>
</div>
  </body>
</html>
