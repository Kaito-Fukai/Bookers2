<!doctype html>
<html>
<head>
	<meta charset="UTF-8">
</head>
<body>
	<div class="container">
		<div class="row">
			<!-- ユーザー情報（共通テンプレート） -->
			<%= render 'users/list', newpost: @newpost %>
			<!-- 投稿内容一覧 -->
			<div class="col-xs-9">
				<section class="contents">
					<h3>all users</h3>
					<table class="table table-stripped">
						<tr align="left">
							<th> profile image </th>
							<th> name </th>
							<th> <th>
							</tr>
							<% @user.each do |user| %>
							<tr align="left">
								<td> <%= attachment_image_tag user, :profile_image, :fill, 45, 45, class: "img-square pull-left profile-thumb", fallback: "no_image.jpg" %> </td>
								<td> <%= link_to user.name, user_path(user) %> </td>
								<td> <%= link_to "このユーザーの投稿を見る", user_path(user) ,class: 'btn btn-info'%> </td>
							</tr>
							<% end %>
						</table>
					</section>
				</div>
			</div>
		</div>
	</body>
	</html>
