<!doctype html>
<html>
  <head>
	<meta charset="UTF-8">
  </head>
<!-- body -->
  <body>
	<!-- 投稿内容一覧・操作メニュー -->
<div class="container">
<div class="row">
	<div class="col-xs-3">
	<!-- ユーザー情報 -->
	<!-- 投稿フォーム -->
  	<section class="new-book">
  		<h4> create new post </h4>
		<%= form_for(@newpost) do |f| %>
		<h4> title </h4>
		<%= f.text_field :title %>

		<h4> impression </h4>
		<%= f.text_area :impression %>

		<%= f.submit '投稿する' %>
		<% end %>
  	</section>
  </div>
	<!-- 投稿内容一覧 -->
	<div class="col-xs-9">
  	<section class="contents">
  		<h2>一覧</h2>
		<table class="table table-stripped">
			<tr align="left">
				<th> profile image </th>
				<th> name </th>
				<th> <th>
			</tr>
	  		<% @user.each do |user| %>
			<tr align="left">
				<td> <%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %> </td>
				<td> <%= link_to user.name, booker_path(user) %> </td>
			</tr>
	  		<% end %>
		</table>
  	</section>
  </div>
</div>
</div>
  </body>
</html>
