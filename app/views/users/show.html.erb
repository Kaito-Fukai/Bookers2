<!doctype html>
<html>
<head>
	<meta charset="UTF-8">
</head>
<!-- ユーザー個人情報 -->
<body>
	<!-- フラッシュメッセージ -->
	<% if flash[:notice] %>
	<p id="notice"><%= flash[:notice] %></p>
	<% end %>
	<!-- ページの中身 -->
	<div class="container">
		<div class="row">
			<!-- ユーザー情報（共通テンプレート） -->
			<%= render 'users/list', newpost: @newpost %>
			<!-- 投稿内容一覧 -->
			<div class="col-xs-9">
				<section class="contents">
					<h3><%= @user.name %> 's  Posts </h3>
					<table class="table table-stripped">
						<tr align="left">
							<th> title </th>
							<th> impression </th>
							<th></th>
						</tr>
						<% @post.each do |post| %>
						<tr align="left">
							<td> <%= link_to post.title, booker_path(post) %> </td>
							<td> <%= link_to post.impression, booker_path(post) %> </td>
							<td>
								<%= link_to "詳しく見る", booker_path(post), class: 'btn btn-primary' %>
								<% if @user.id == current_user.id %>
								<%= link_to "編集", edit_booker_path(post), class: 'btn btn-info' %>
								<%= link_to "削除", booker_path(post), method: :delete, data: {confirm: '本当に削除してよろしいですか?'} , class: 'btn btn-danger' %>
								<% end %>
							</td>
						</tr>
						<% end %>
					</table>
					<%= paginate @post, class: "pagenate" %>
				</section>
			</div>
		</div>
	</div>
</body>
</html>
